
// ========================================
// Base styles
// ========================================

*
  box-sizing border-box

html
  height: 100%

body
  helvetica()
  color: #333
  font-weight: 300
  font-size: 16px
  line-height: 1.5


// Typography
// ----------------------------------------

h1,
h2,
h3,
h4,
.heading
  font-weight: 500
  font-style: italic
  text-transform: uppercase
  margin: 0 0 10px
h1
  font-size: 34px
h2
  font-size: 26px
  font-weight: 400
h3,
.heading-3
  font-size: 18px
  font-weight: 300
  letter-spacing: 1px
h4
  font-size: 16px
h5,
h6
  font-weight: 800
  font-size: 16px

p
  margin: 0 0 20px 0


// Tables
// ----------------------------------------

table
  width: 100%

  &.table-fixed
    table-layout: fixed

    td
      padding: 0
      overflow: hidden
      display: inline-block
      white-space: nowrap


// Links
// ----------------------------------------

a
  color: href
  text-decoration: none
  &:hover
    color: href
    text-decoration: underline
  &:active
    outline: 0
    text-decoration: underline
    color: lighten(href, 20%)

.reset-link
  color: inherit
  &:hover,
  &:active
    color: inherit
    text-decoration: none


// Horizontal rule
// ----------------------------------------

hr
  max-width: 370px
  margin: 1em auto
@media only screen and (min-width:470px)
  hr
    max-width: 686px


// Universal State Rules
// ----------------------------------------
// more states in utilities folder

.is-muted
  color: #888