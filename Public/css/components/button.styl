
// ========================================
// Button
// ========================================

.btn
  display: inline-block
  background-image: linear-gradient(#28a0e5, #015e94)
  -webkit-font-smoothing: antialiased
  border: 0
  padding: 1px
  text-decoration: none
  border-radius: 5px
  box-shadow: 0 1px 0 rgba(black, .2)
  user-select: none
  text-decoration: none
  cursor: pointer
  text-decoration: none !important

  &::-moz-focus-inner
    border: 0
    padding: 0

  span
    display: block
    position: relative
    padding: 0 18px
    height: 45px
    line-height: 45px
    background: #1275ff
    background-image: linear-gradient(#7dc5ee, #008cdd 85%, #30a2e4)
    font-size: 22px
    color: #fff
    font-weight: bold
    text-shadow: 0 -1px 0 rgba(black, .25)
    box-shadow: inset 0 1px 0 rgba(white, .25)
    border-radius: 4px

  &:not(:disabled):active
    background: #005d93

  &:not(:disabled):active span
    color: #eee;
    background: #008cdd;
    background-image: linear-gradient(#008cdd, #008cdd 85%, #239adf);
    box-shadow: inset 0 1px 0 rgba(black, .1);

  &:disabled
    background: rgba(black, .2)
    box-shadow: 0 1px 0 rgba(white, .4)

  &:disabled span
    color: #666
    background: #f8f9fa
    text-shadow: 0 1px 0 rgba(white, .5)
