
// ========================================
// main navigation
// ========================================

.nav
  width: 100%
  margin-top: 4px
  background: #f1f0ed
  font-family: 'Open Sans Condensed', sans-serif
  font-weight: bold
  font-size: 12px
  text-transform: uppercase
  position: relative
  ul
    margin: 0
    padding: 0
  li
    display: inline-block
    width: 25%


// Subnav navigation
// ----------------------------------------

.nav__sub
  @extend .nav
  position: absolute
  top: 32px
  left: 0
  background: #e8e6e5
  visibility: hidden
  opacity: 0
  transition: opacity .2s ease-out
  transition-delay: .15s

.nav__sub-parent
  &:hover .nav__sub
    visibility: visible
    opacity: 1

  // Bridge for the gap between the nav and subnav
  > .nav__item:after
    content: ""
    position: absolute
    bottom: -6px;
    left: 0
    height: 7px
    width: 100%


// Navigation item
// ----------------------------------------

.nav__item
  position: relative
  display: block
  padding: 7px 0
  text-decoration: none
  line-height: 1.5
  color: #4c4c4c
  background: transparent
  transition: background .1s ease
  -webkit-tap-highlight-color: rgba(black, 0)

  &:hover
  &.is-active
    color: #555
    text-decoration: none
    background: white
  &:visited
    color: #555
  &:active
    color: #888


@media only screen and (min-width:768px)

  .nav,
  .nav__sub
    li
      width: auto

  .nav__item
    min-width: 98px
