/*
 * The list
 */

.page-footer
  text-align: center
  font-family: 'Open Sans Condensed', sans-serif
  font-weight: normal
  font-size: 14px
  text-transform: uppercase
  padding: 0 15px 70px
  max-width: 370px
  margin: 50px auto 0
  color: #5c5c5c
  &:before
    content: ""
    @extend hr
  ul
    margin: 0
    padding: 0
  li
    display: inline-block
    margin: 0 12px 10px
    list-style: none
  a
    color: inherit

@media only screen and (min-width:470px)
  .page-footer
    max-width: 686px
    li
      margin: 0 8px 10px

@media only screen and (min-width:768px)
  .page-footer
    li
      margin: 0 16px 10px