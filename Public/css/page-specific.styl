
// ========================================
// Page header
// ========================================

.page-header
  margin-bottom: 36px
  text-align: center
  z-index: 2
  strong
    display: block
    width: 100%
    background: #f2f0eb
    padding: 22px
    overflow: hidden





// ========================================
// Product Pages
// ========================================

.products-page
  .nav__sub
    visibility: visible
    opacity: 1

  .shop
    float: right
    min-width: 282px
    margin-top: 10px

.product-info
  clearfix()
  margin-bottom: 40px
  position: relative
  table
    width: 80%

@media only screen and (min-width:768px)
  .product-info
    article
      float: left
      width: 58%
      max-width: 650px


// Product image with label
// ----------------------------------------

.product-image
  width: 100%
  margin: 40px 0
  position: relative
  text-align: center
  clear: both
  @extend .reset-link
  img
    width: 100%
    height: auto
  figcaption
    margin-bottom: 15px


@media only screen and (min-width:768px)
  .product-image
    margin: 60px 0
    figcaption
      font-weight: 400
      font-size: 24px
      letter-spacing: 0