
href = #4050F1
hr   = #ccc

// ========================================
// Base Rules
// ========================================

html
  height: 100%

body
  helvetica()
  color: #333
  font-weight: 300
  font-size: 16px
  line-height: 1.5


h1, h2, h3, h4, .heading
  font-weight: 500
  font-style: italic
  text-transform: uppercase
  margin: 0 0 10px

h1
  font-size: 34px
h2
  font-size: 26px
  font-weight: 400
h3, .heading-3
  font-size: 18px
  font-weight: 300
  letter-spacing: 1px
h4
  font-size: 16px

h5, h6
  font-weight: 800
  font-size: 16px

p
  margin: 0 0 20px 0


a
  color: href
  text-decoration: none
  &:hover
    color: href
    text-decoration: underline
  &:active
    outline: 0
    text-decoration: underline
    color: lighten(href, 20%)





// ========================================
// Page header
// ========================================

header
  margin-bottom: 36px
  text-align: center
  z-index: 2
  strong
    display: block
    width: 100%
    background: #f2f2f2
    padding: 22px
    overflow: hidden
    border-bottom: 1px solid darken(#f2f2f2, 10%)

.logo
  display: inline-block
  text-indent: -999em
  width: 150px
  height: 51px
  background-image: url('../img/logo.svg')
  opacity: 0.75
  transition: opacity .2s ease
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  &:hover
    opacity: 0.85
  &:active
    opacity: 0.6
    transition: opacity 0

// Fallback png logo if no svg support
.no-svg .logo
  background-image: url('../img/logo.png')






// ========================================
// Page Navigation
// ========================================

nav,
.subnav
  width: 100%
  background: darken(#f2f2f2, 3%)
  margin-top: 4px
  border: darken(#f2f2f2, 13%)
  border-width: 1px 0
  font-family: 'Open Sans Condensed', sans-serif
  font-weight: bold
  font-size: 12px
  text-transform: uppercase
  position: relative
  ul
    margin: 0
    padding: 0
  li
    display: inline-block
    width: 25%
    &:last-child .nav-item
      border-right: 0
  .nav-item
    border-color: darken(#f2f2f2, 13%) !important


// Sub Navigation
// ==============================

.subnav
  visibility: hidden
  opacity: 0
  background: darken(#f2f2f2, 5%)
  absolute: top 30px left
  border-color: darken(#f2f2f2, 15%)
  transition: opacity .2s ease-out
  transition-delay: .15s
  li
    width: 14.2857142857%
  .nav-item
    border-color: darken(#f2f2f2, 15%) !important

.subnav-parent
  // Bridge element for nav - subnav gap
  > a:after
    content: ""
    height: 7px
    width: 100%
    absolute: bottom -6px left 0

  &:hover
    .subnav
      visibility: visible
      opacity: 1

// Always show subnav on products page
.products-page
  .subnav
    visibility: visible
    opacity: 1


// Navigation Items
// ==============================

.nav-item
  display: block
  position: relative
  padding: 7px 0
  line-height: 1.3
  color: #555
  text-decoration: none
  border-right: 1px solid
  background: transparent
  transition: background .1s ease
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  &:hover,
  &.active
    color: #555
    background: white
    text-decoration: none
  &:visited
    color: #555
  &:active
    color: #888

// Navigation items active state
.nav-item.active
  &:before,
  &:after
    content: ""
    position: absolute
    left: 0
    width: 100%
    height: 1px
    background: white
  &:before
    top: -1px
  &:after
    bottom: -1px


// Navigation @ tablet
// ==============================

@media only screen and (min-width:768px)

  nav,
  .subnav
    li
      width: auto
      &:first-child .nav-item
        border-left: 1px solid
      &:last-child .nav-item
        border-right: 1px solid
  .nav-item
    min-width: 98px






// ========================================
// Page Footer
// ========================================

footer
  text-align: center
  font-family: 'Open Sans Condensed', sans-serif
  font-weight: normal
  font-size: 14px
  text-transform: uppercase
  padding: 0 15px 70px
  max-width: 370px
  margin: 50px auto 0
  color: #5c5c5c
  ul
    margin: 0
    padding: 16px 0 0
    border-top: 1px solid #e6e6e6
    list-style: none
    list-style-image: none
  li
    display: inline-block
    margin: 0 12px 10px
  a
    color: inherit


// Footer @ landscape mobile
// ==============================

@media only screen and (min-width:470px)

  footer
    max-width: 686px
    li
      margin: 0 8px 10px


// Footer @ tablet
// ==============================

@media only screen and (min-width:768px)

  footer
    ul
      padding-top: 23px
    li
      margin: 0 16px 10px






// ========================================
// Product View
// ========================================

.product-info
  clearfix()
  margin-bottom: 40px
  position: relative

  table
    width: 80%


// Shop unit
// ==============================

.shop
  display: none
  h2
    cursor: default
    margin-bottom: 4px
  .check-radio[for="complete"]
    margin-right: 30px

.shop-item
  margin-top: 12px
  display: none
  p
    cursor: default
    margin: 0
  .btn
    margin: 15px 0 12px
    min-width: 183px

.is-complete
  .shop-item
    &.complete
      display: block

.is-deck-only
  .shop-item
    &.deck-only
      display: block

// Product info is tab navigated in mobiles
.tabs
  display: block


// Product View @ landscape mobile
// ==============================

@media only screen and (min-width:470px)

  // temp


// Product View @ tablet
// ==============================

@media only screen and (min-width:768px)

  .product-info
    article
      float: left
      width: 58%
      max-width: 650px

  .shop
    display: block
    float: right
    min-width: 282px
    margin-top: 10px
    border: 1px solid rgb(231, 231, 231)
    padding: 20px 18px 28px 30px
    border-radius: 3px

  .tabs
    display: none






// ========================================
// Module Rules
// ========================================

// Button
// ==============================

[class|="btn"], .btn
  display: inline-block
  background-image: linear-gradient(#28a0e5, #015e94)
  -webkit-font-smoothing: antialiased
  border: 0
  padding: 1px
  text-decoration: none
  border-radius: 5px
  box-shadow: 0 1px 0 rgba(0,0,0,0.2)
  user-select: none
  text-decoration: none
  cursor: pointer
  text-decoration: none !important

  &::-moz-focus-inner
    border: 0
    padding: 0

  span
    display: block
    position: relative
    padding: 0 18px
    height: 45px
    line-height: 45px
    background: #1275ff
    background-image: linear-gradient(#7dc5ee, #008cdd 85%, #30a2e4)
    font-size: 22px
    color: #fff
    font-weight: bold
    text-shadow: 0 -1px 0 rgba(black, .25)
    box-shadow: inset 0 1px 0 rgba(white, .25)
    border-radius: 4px

  &:not(:disabled):active
    background: #005d93

  &:not(:disabled):active span
    color: #eee;
    background: #008cdd;
    background-image: linear-gradient(#008cdd, #008cdd 85%, #239adf);
    box-shadow: inset 0 1px 0 rgba(0,0,0,0.1);

  &:disabled
    background: rgba(0,0,0,0.2)
    box-shadow: 0 1px 0 rgba(255,255,255,0.4)

  &:disabled span
    color: #666
    background: #f8f9fa
    text-shadow: 0 1px 0 rgba(255,255,255,0.5)


  .price
    font-weight: 400
    margin-left: 14px
    padding-left: 14px
    border-left: 1px solid #007CC4
    small
      font-size: 60%
      font-weight: 500


// Checkbox & radiobutton
// ==============================

.check-radio
  display: inline-block
  cursor: pointer
  span
    vertical-align: middle
    padding-left: 5px
  input
    vertical-align: middle
    &:not(:checked)
      opacity: .8
      ~ span
        color: #888
  .extra
    margin: -3px 0 0 18px
    display: block
    font-size: 14px



// Constrained wrapper unit
// ==============================

.constrained
  max-width: 1100px
  width: 100%
  margin: 0 auto
  padding: 15px

.constrained-nopad
  @extend .constrained
  padding: 0

.constrained-tighter
  @extend .constrained
  max-width: 980px
  padding-right: 20px
  padding-left: 20px




// Simple grid system
// ==============================

.unit-1-3
  width: 33.333%
.unit-2-3
  width: 66.666%



// Tables
// ==============================

table
  width: 100%
  table-layout: fixed
td
  padding: 0
  overflow: hidden
  display: inline-block
  white-space: nowrap



// Product image with label
// ==============================

.product-image
  width: 100%
  margin: 50px 0 0
  position: relative
  text-align: center
  clear: both
  img
    width: 100%
    height: auto
  figcaption
    margin-bottom: 15px


@media only screen and (min-width:768px)

  .product-image
    margin: 80px 0 0
    figcaption
      // Mimic h4..
      font-weight: 400
      font-size: 24px
      letter-spacing: 0






// ========================================
// Universal State Rules
// ========================================

.is-hidden
  display: none !important
  visibility: hidden

.is-muted
  color: #888
