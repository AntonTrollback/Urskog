
// ========================================
// Base Rules
// ========================================

html
  height: 100%

body
  helvetica()
  color: #333
  font-weight: 300

h1, h2, h3, h4, h5, h6
  font-weight: 500
  font-style: italic
  text-transform: uppercase

a
  color: inherit
  text-decoration: underline
  &:active
    outline: 0




// ========================================
// Page header
// ========================================

header
  margin-bottom: 36px
  text-align: center
  z-index: 2
  strong
    display: block
    width: 100%
    background: rgb(242, 242, 242)
    padding: 22px
    overflow: hidden
    border-bottom: 1px solid #ddd

.logo
  display: inline-block
  text-indent: -999em
  width: 150px
  height: 51px
  background-image: url('../img/logo.svg')
  opacity: 0.75
  transition: opacity .2s ease
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  &:hover
    opacity: 0.85
  &:active
    opacity: 0.6
    transition: opacity 0

// Fallback png logo if no svg support
.no-svg .logo
  background-image url('../img/logo.png')




// ========================================
// Page Navigation
// ========================================

nav,
.subnav
  width: 100%
  background: rgb(238, 238, 238)
  margin-top: 4px
  border: 1px solid rgb(217, 217, 217)
  border-width: 1px 0
  font-family: 'Open Sans Condensed', sans-serif
  font-weight: bold
  font-size: 12px
  text-transform: uppercase
  ul
    margin: 0
    padding: 0
  li
    display: inline-block
    width: 25%
    position: static
    &:last-child .nav-item
      border-right: 0

// Sub Navigation
// ==============================

.subnav
  visibility: hidden
  opacity: 0
  background: rgb(234, 234, 234)
  absolute: top 30px left
  border-color: rgb(213, 213, 213)
  z-index: -1
  transition: opacity .2s ease-out
  li
    width: 14.2857142857% 
    .nav-item
      border-color: rgb(213, 213, 213)

.subnav.is-visible
  visibility: visible
  opacity: 1

// Always show subnav on products page
.products-page
  .subnav
    visibility: visible
    opacity: 1

// Navigation Items
// ==============================

.nav-item
  display: block
  padding: 7px 0
  line-height: 1.3
  color: #555
  text-decoration: none
  border-right: 1px solid rgb(217, 217, 217)
  background: transparent
  transition: background .1s ease
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  &:hover,
  &.active,
  &:visited
    color: #555
    background: white
  &:active
    color: #888

// Navigation items active state
.nav-item.active
  &:before,
  &:after
    content: ""
    position: absolute
    left: 0
    width: 100%
    height: 1px
    background: white
  &:before
    top: -1px
  &:after
    bottom: -1px

// Navigation @ tablet
// ==============================

@media only screen and (min-width:768px)

  nav,
  .subnav
    li
      width: auto
      &:first-child .nav-item
        border-left: 1px solid #ddd
      &:last-child .nav-item
        border-right: 1px solid #ddd
  .nav-item,
  .nav-item:visited
    min-width: 98px




// ========================================
// Page Footer
// ========================================

footer
  text-align: center
  font-family: 'Open Sans Condensed', sans-serif
  font-weight: normal
  font-size: 14px
  text-transform: uppercase
  padding: 0 15px
  max-width: 370px
  margin: 50px auto 0
  color: #5c5c5c
  ul
    margin: 0
    padding: 16px 0 0
    border-top: 1px solid #e6e6e6
    list-style: none
    list-style-image: none
  li
    display: inline-block
    margin: 0 12px 10px
  a
    text-decoration: none
    &:hover
      text-decoration: underline

// Footer @ landscape mobile
// ==============================

@media only screen and (min-width:470px)

  footer
    max-width: 686px
    li
      margin: 0 8px 10px

// Footer @ tablet
// ==============================

@media only screen and (min-width:768px)

  footer
    ul
      padding-top: 23px
    li
      margin: 0 16px 10px



// ========================================
// Products Main Page
// ========================================

// Product image with label
// ==============================

.product-image
  width: 95%
  margin: 0 auto
  max-width: 1200px;
  img
    width: 100%
    height: auto




// ========================================
// Universal State Rules
// ========================================

.is-hidden
  display: none !important
  visibility: hidden