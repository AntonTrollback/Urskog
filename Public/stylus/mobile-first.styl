/* Mobile first styles: (mobile-first.styl) */


// =================================
// Page setup
// =================================

html
  height 100%
body
  helvetica()
  color #333
  font-weight 300

h1, h2, h3, h4, h5, h6
  font-weight 500
  font-style italic
  text-transform uppercase


// =================================
// Header
// =================================


// Logo
// ========================

header
  margin-bottom 36px
  text-align center
  z-index 2
  strong
    display block
    width 100%
    background rgb(242, 242, 242)
    padding 22px
    overflow hidden
    border-bottom 1px solid #ddd

.logo
  display inline-block
  text-indent -999em
  width 150px
  height 51px
  background-image url('../img/logo.svg')
  opacity 0.7
  transition opacity .2s ease
  &:hover
    opacity 0.85
  &:active
    opacity 0.6
    transition opacity 0

// Fallback png logo if no svg support
.no-svg .logo
  background-image url('../img/logo.png')


// Navigation setup
// ========================

nav, .subnav
  width 100%
  background rgb(238, 238, 238)
  margin-top 4px
  border 1px solid rgb(217, 217, 217)
  border-width 1px 0
  font-family 'Open Sans Condensed', sans-serif
  font-weight bold
  font-size 12px
  text-transform uppercase
  li
    display inline-block
    width 25%
    position static
    &:last-child .nav-item
      border-right 0

.subnav
  visibility hidden
  opacity 0
  background rgb(234, 234, 234)
  absolute top 30px left
  border-color rgb(213, 213, 213)
  z-index -1
  transition .2s ease-out
  transiton-property opacity, top
  li
    width 14.2857142857% 
    .nav-item
      border-color rgb(213, 213, 213)
  &.is-visible
    visibility visible
    opacity 1


// Navigation buttons
// ========================

.nav-item, .nav-item:visited
  display block
  padding 7px 0
  line-height 1.3
  color #555
  text-decoration none
  border-right 1px solid rgb(217, 217, 217)
  background transparent
  transition background .1s ease
  &:hover
  &.active
    color #555
    background white
  &:active
    color #888

// Navigation buttons active state

.nav-item.active
  &:before,
  &:after
    content ""
    position absolute
    left 0
    width 100%
    height 1px
    background white
  &:before
    top -1px
  &:after
    bottom -1px



.products-page
  .subnav
    display block





.product-image
  width 95%
  margin 0 auto
  max-width 1200px;
  img
    width 100%
    height auto
