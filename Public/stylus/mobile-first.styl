/* Mobile first styles: (mobile-first.styl) */


// =================================
// Page setup
// =================================

html
  height 100%
body
  helvetica()
  color #333



// =================================
// Header
// =================================


// Logo
// ========================

header
  margin-bottom 36px
  text-align center
  strong
    display block
    width 100%
    background #f2f2f2
    padding 22px
    overflow hidden
    border-bottom 1px solid #ddd
.logo
  display inline-block
  text-indent -999em
  width 150px
  height 51px
  background-image url('../img/logo.svg')
  opacity 0.7
  transition opacity .2s ease
  &:hover
    opacity 0.9
// Fallback png logo if no svg support
.no-svg .logo
  background-image url('../img/logo.png')


// Navigation
// ========================

nav, .subnav
  width 100%
  background #f2f2f2
  margin-top 4px
  border 1px solid #ddd
  border-width 1px 0
  font-family 'Open Sans Condensed', sans-serif
  font-weight bold
  font-size 12px
  text-transform uppercase
  li
    display inline-block
    width 25%
    &:last-child .nav-item
      border-right 0

.nav-item, .nav-item:visited
  display block
  padding 7px 0
  line-height 1.3
  color #555
  text-decoration none
  border-right 1px solid #ddd
  background transparent
  transition background .1s ease
  &:hover
  &.active
    color #555
    background white
  &:active
    color #888

.nav-item.active
  &:before,
  &:after
    content ""
    position absolute
    left 0
    width 100%
    height 1px
    background white
  &:before
    top -1px
  &:after
    bottom -1px

.subnav
  display block
  fixed left top 131px
  li
    width 14.2857142857% 