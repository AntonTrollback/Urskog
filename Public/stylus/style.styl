
// CSS setup
// ============================

// Font imports
@import url('http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700|Open+Sans+Condensed:300,300italic,700')

// Stylus mixins
@import 'mixins/mixins'

// HTML5 Boilerplate
@import 'mixins/h5bp'

* // Universal properties
  position relative
  background-repeat no-repeat
  box-sizing border-box



// Shared styles
@import 'mixins/shared'

// Mobile first
@import 'mobile-first'

// Tablet
@import 'tablet'

// Desktop
@import 'desktop'



// Helper classes
@import 'mixins/h5bp-helpers'

