<form class="Shop js-shop" action="/products/<%= @board.slug %>/checkout">
  <% if @board.deck_only? %>

    <label class="Control is-disabled" for="complete">
      <input type="radio" id="complete" name="buy_option" value="complete" disabled> <span>Complete</span> <span class="Control-sub">Not available</span>
    </label>
    <label class="Control" for="deckOnly">
      <input type="radio" id="deckOnly" name="buy_option" value="deck" checked> <span>Deck only</span> <span class="Control-sub"><%= @board.price.deck %> <small>SEK</small></span>
    </label>

  <% else %>

    <label class="Control" for="complete">
      <input class="js-shopControl" type="radio" id="complete" name="buy_option" value="complete" checked> <span>Complete</span> <span class="Control-sub"><%= @board.price.complete %> <small>SEK</small></span>
    </label>
    <label class="Control" for="deckOnly">
      <input class="js-shopControl" type="radio" id="deckOnly" name="buy_option" value="deck"> <span>Deck only</span> <span class="Control-sub"><%= @board.price.deck %> <small>SEK</small></span>
    </label>

  <% end %>

  <div class="Shop-section">

    <div class="Control">
      <label class="u-marginRs" for="wood_type">Wood:</label>
      <select class="Control-menu" name="wood_type" id="wood_type">
        <% @board.woods.each do |wood| %>
          <option value="<%= wood %>"><%= wood.capitalize %></option>
        <% end %>
      </select>
    </div>
  </div>

  <%= erb :'parts/buy_button' %>



</form>
