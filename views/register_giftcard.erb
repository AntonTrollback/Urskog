<form class="Constrained Constrained--xs v-form"
      id="register-giftcard-form"
      action="-"
      method="POST"
      novalidate
      autocomplete="on">

  <h1 class="u-textCenter u-paddingBl u-marginBl">Register giftcard</h1>

  <div class="Grid Grid--wide v2-Grid--2col js-registerGiftcard">

    <div class="Grid-cell u-marginBl">
      <div class="Grid Grid--narrow">
        <div class="Grid-cell">
          <div class="Control">

            <label for="giftcard-name">Name</label>
            <input class="Control-field v-length"
                   id="giftcard-name"
                   name="giftcard[name]"
                   type="text"
                   data-dev="Example Name"
                   required>

          </div>
        </div>
        <div class="Grid-cell">
          <div class="Control">

            <label for="giftcard-email">Mail <span class="u-textMuted">(will receive the discount code)</span></label>
            <input class="Control-field v-email"
                   id="giftcard-email"
                   name="giftcard[email]"
                   type="email"
                   data-dev="anton@urskog.com"
                   required>

          </div>
        </div>
      </div>
    </div>

    <div class="Grid-cell">
        <div class="Grid-cell">
          <div class="Control">

            <label for="giftcard-string">Giftcard code <span class="u-textMuted"></span></label>
            <input class="Control-field v-giftcard"
                   id="giftcard-string"
                   name="giftcard[string]"
                   type="text"
                   maxlength="10"
                   placeholder="●●●●●●●●●●"
                   data-dev="0123456789"
                   required>

          </div>
        </div>
        <div class="Grid-cell u-textCenter u-paddingTm">
          <button type="submit" class="Button Button--full v-submit"><span>Ok, I'm done</span></a>
        </div>
      </div>
    </div>
  </div>

</form>

